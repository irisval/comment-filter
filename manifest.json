{
	"manifest_version": 2,
	"name": "Youtube Filter",
	"description": "Filter Youtube's comment section.",
	"version": "1.0",
	"icons": {
		"16": "icons/ico.png",
	    "32": "icons/ico.png",
	    "48": "icons/ico.png",
	    "128": "icons/ico.png"
	},
	"browser_action": {
		"default_popup": "html/popup.html"
	},
	"background": {
		// "page": "html/popup.html",
		 "scripts": ["js/popup.js"]
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"all_frames": true,
			"matches": ["https://apis.google.com/*", "https://plus.googleapis.com/*", "https://www.youtube.com/*"],
			"js": ["js/main.js", "js/popup.js"]
		}
	],
	"permissions": [
	    "tabs",
	    "https://ajax.googleapis.com/",
	    "https://www.youtube.com/*",
	    "contextMenus",
		"storage"
	]
}